@model MVCValidate.Models.TestModelsAllowHtml
@{
    ViewBag.Title = "AllowHtml";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AllowHtml</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
    <div style="width: 45%; float: right;">
        <fieldset>
            <legend>AllwHtml</legend>
            @Html.Raw(Convert.ToString(ViewData["A"]))
        </fieldset>
        <fieldset>
            <legend>Disallow</legend>
            @Html.Raw(Convert.ToString(ViewData["D"]))
        </fieldset>
    </div>
    <div style="width: 45%;">
        <fieldset>
            <legend>Account Information</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.AllowHtml)
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(m => m.AllowHtml)
                @Html.ValidationMessageFor(m => m.AllowHtml)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.Disallow)
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(m => m.Disallow)
                @Html.ValidationMessageFor(m => m.Disallow)
            </div>
            <p>
                <input type="submit" value="ok" />
            </p>
        </fieldset>
    </div>

}
